<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Statistics">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game statistics"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="28sp"
        android:id="@+id/statistic_textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statistic_textView"
        android:id="@+id/name_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_weight="1"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/textView3" />
    </LinearLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Set 1"
           android:id="@+id/set1"
           android:layout_below="@id/name_text_view"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/set1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                    android:text="Win by Smash"/>
            <TextView
                android:id="@+id/stat_set1_smash"
                    android:text="xx"/>
            <TextView
                android:text="Win by Smash"/>
            <TextView
                android:text="xx"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Win by Net"/>
            <TextView
                android:text="xx"/>
            <TextView
                android:text="Win by net"/>
            <TextView
                android:text="xx"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Win by Clear"/>
            <TextView
                android:text="xx"/>
            <TextView
                android:text="Win by Clear"/>
            <TextView
                android:text="xx"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Win by opponent's Error"
                android:layout_marginRight="10dp"/>
            <TextView
                android:text="xx"
                android:layout_marginRight="10dp"/>
            <TextView
                android:text="Win by opponent's Error"
                android:layout_marginRight="10dp"/>
            <TextView
                android:text="xx"
                android:layout_marginRight="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>
    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/single_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            android:background="#ffbfff16"
            android:onClick="reset"
            android:text="Reset" />
        <Button
            android:id="@+id/single_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp"
            android:background="#ffbfff16"
            android:onClick="nextSet"
            android:text="Start next set" />
        <Button
            android:id="@+id/single_startover_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:background="#ffbfff16"
            android:onClick="startOver"
            android:text="Start over" />

    </LinearLayout>




</RelativeLayout>
